{
  "name": "@device-router/probe",
  "version": "0.3.0",
  "type": "module",
  "description": "Lightweight (~1 KB gzipped) client-side probe for collecting device capability signals",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimplyLiz/DeviceRouter.git",
    "directory": "packages/probe"
  },
  "homepage": "https://github.com/SimplyLiz/DeviceRouter/tree/main/packages/probe#readme",
  "bugs": {
    "url": "https://github.com/SimplyLiz/DeviceRouter/issues"
  },
  "keywords": [
    "device-detection",
    "browser-signals",
    "client-probe",
    "lightweight",
    "device-capabilities"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": "./dist/device-router-probe.min.js",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./browser": "./dist/device-router-probe.min.js",
    "./dist/device-router-probe.min.js": "./dist/device-router-probe.min.js"
  },
  "files": [
    "dist"
  ],
  "funding": "https://github.com/sponsors/SimplyLiz",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -b && node scripts/bundle.js",
    "build:probe": "node scripts/bundle.js",
    "clean": "rm -rf dist *.tsbuildinfo",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "esbuild": "^0.27.3"
  }
}
