{
  "name": "device-router",
  "version": "0.4.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "description": "Detect device capabilities server-side and enable tailored responses",
  "repository": {
    "type": "git",
    "url": "https://github.com/SimplyLiz/DeviceRouter.git"
  },
  "homepage": "https://github.com/SimplyLiz/DeviceRouter#readme",
  "bugs": {
    "url": "https://github.com/SimplyLiz/DeviceRouter/issues"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r run clean"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.23.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ],
    "overrides": {
      "minimatch@<10.2.1": "^10.2.1"
    }
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^10.0.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  }
}
